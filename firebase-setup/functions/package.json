{
  "name": "codecontextpro-functions",
  "description": "CodeContextPro-MES Firebase Functions - Secure payment and license management",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.4.0",
    "stripe": "^14.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.23",
    "typescript": "^5.0.0"
  },
  "private": true
}
